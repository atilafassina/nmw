{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "pulsar",
  "version": "0.1.1",
  "identifier": "pulsar.atila.io",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "macOS": {
      "signingIdentity": "-"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {},
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "pulsar",
        "width": 800,
        "height": 600
      }
    ]
  }
}
