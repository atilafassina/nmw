{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "pulsar",
  "version": "0.1.1",
  "identifier": "pulsar.atila.io",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  
  "bundle": {
    "macOS": {
      "signingIdentity": "-"
    },
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://cdn.crabnebula.app/update/the-huns/pulsar/{{target}}-{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDIwRjVBQUI5NkIyRUExMjkKUldRcG9TNXJ1YXIxSUdLcmJLSTZVUkwvbE5CWGZMbUt0Q2NRTkhsMmEzV3E2a0tzbTYySFJ3NXAK"
    }
  },
  "app": {
    "withGlobalTauri": false,
    "security": {
      "csp": null
    },
    
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "pulsar",
        "width": 800,
        "height": 600
      }
    ]
  }
}
